<h3><%= @user.name %></h3>
<h4><%= @user.title %></h4>
<h4><%= @user.company.name %></h4>
<h4>Team: <%= link_to "#{@team.name}", "/teams/#{@user.team.id}" %></h4>
<h4>League: <%= link_to "#{@league.name}", "/leagues/#{@team.league.id}" %></h4>

<% if @user == current_user %>
  <% if current_user.authentications.find_by({ :provider => "salesforce" }) %>
    <%= link_to "<i class='fa fa-cloud fa-2x sf-cloud'></i> unauthorize Salesforce".html_safe, "/authentications/#{current_user.authentications.find_by({ :provider => "salesforce" }).id }", :method => :delete %>
  <% else %>
    <a href="/auth/salesforce"><i class="fa fa-cloud fa-2x sf-cloud-o"></i> authorize Salesforce</a>
  <% end %>
<% end %>

