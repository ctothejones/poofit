<!DOCTYPE html>
<html>
  <head>

    <title>Poofit</title>

    <!-- Style Elements -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/flatly/bootstrap.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300,400italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="/styles.css">
    <link rel="shortcut icon" href="/poof_plain.png"/>

    <!-- Scripts -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <%= csrf_meta_tags %>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><img src="/poof_plain.png" alt="Poofit logo" width="50px"></a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <% if user_signed_in? %>
              <li><%= link_to '<i class="fa fa-building fa-lg"></i> Company'.html_safe, company_path(current_user.company) %></li>
              <li><%= link_to '<i class="fa fa-trophy fa-lg"></i> League'.html_safe, league_path(current_user.league) %></li>
              <li><%= link_to '<i class="fa fa-users fa-lg"></i> Team'.html_safe, league_team_path(current_user.league, current_user.team) %></li>
            <% end %>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "#{current_user.first_name}", user_path(current_user) %></li>
              <li><a href="/users/sign_out" data-method="delete"><i class="fa fa-sign-out fa-lg"></i></a></li>
            <% else %>
              <li><a href="/users/sign_up">Sign up</a></li>
              <li><a href="/users/sign_in">Sign in</a></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container -->
    </nav>

    <div class="container">
      <% if notice.present? %>
        <div class="alert alert-dismissable alert-success">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <div class="alert alert-dismissable alert-warning">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= alert %>
        </div>
      <% end %>
    </div>

    <div class="container" style="padding-top: 40px">
      <%= yield %>
    </div>

  </body>
</html>
