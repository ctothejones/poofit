<div class="row">
  <div class="col-md-3 card">
    <div class="card-image">
      <!-- Change to include team image later -->
      <img style="max-width:300px" src="http://www.myiconart.com/3222-thickbox/space-jam-retro-style-t-shirt-tune-squad.jpg">
    </div>
    <% if @win_count > @loss_count %>
      <div class="team-card-winning">
    <% else %>
      <div class="team-card-losing">
    <% end %>
        <h3>
          <%= @team.name %>
          <span class="label label-info win-loss"><%= @win_count %>-<%= @loss_count %></span>
        </h3>
        <table class="table table-hover table-condensed">
          <tr>
            <td><i class="fa fa-anchor fa-lg"></i></td>
            <td>
              <dl>
                <dt>Captain</dt>
                <dd><%= link_to "#{@captain.name}", "/profiles/#{@captain.id}" %></dd>
              </dl>
            </td>
          </tr>
          <tr>
            <td><i class="fa fa-trophy fa-lg"></i></td>
            <td>
              <dl>
                <dt>League</dt>
                <dd><%= link_to "#{@league.name}", "/leagues/#{@league.id}" %></dd>
              </dl>
            </td>
          </tr>
          <tr>
            <td><i class="fa fa-building fa-lg"></i></td>
            <td>
              <dl>
                <dt>Company</dt>
                <dd><%= @company.name %></dd>
              </dl>
            </td>
          </tr>
        </table>
      </div>
  </div>
  <div class="col-md-7 card">
    <h3>Current Matchup</h3>
    <table class="table table hover">
      <% @team_members.each do |member| %>
        <tr>
        <td><%= link_to "#{member.name}", "/profiles/#{member.id}" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


<h3><i class="fa fa-calendar"></i> Schedule:</h5>

<table>
  <tr>
    <th>Week</th>
    <th>Opponent</th>
    <th>Result</th>
    <th>MVP</th>
  </tr>
  <% @teams_matchups_this_season_in_order.each do |matchup| %>
    <tr>
      <td><%= Week.find(matchup.week_id).number %></td>
      <% if matchup.first_team_id == @team.id %>
        <td><%= link_to "#{Team.find(matchup.second_team_id).name}", "/teams/#{Team.find(matchup.second_team_id).id }" %></td>
      <% else %>
        <td><%= link_to "#{Team.find(matchup.first_team_id).name}", "/teams/#{Team.find(matchup.first_team_id).id }" %></td>
      <% end %>
      <% if matchup.winner == @team.id %>
        <td>W</td>
      <% else %>
        <td>L</td>
      <% end %>
        <td>Name + Pic</td>
    </tr>
  <% end %>
</table>

